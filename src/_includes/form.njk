<div id="contact"
  class="
    relative
    my-4 mx-auto
    w-full max-w-md
    p-4 rounded-2xl bg-blue-200
  ">

  <form name="contact" method="POST" action="/#contact" data-netlify="true" class="flex flex-col gap-y-2">

    <label for="message" class="font-light text-xl italic text-blue-400 font-mono">Lemme know</label>

    <textarea 
      name="message"
      placeholder="Your thoughts" 
      rows="5"
      onkeyup="btnActivation()"
      class="
        rounded-md
        text-base font-mono
        placeholder-slate-400 text-slate-700
        bg-blue-50 focus:bg-yellow-50
        border-2 border-transparent hover:border-blue-300 focus:border-blue-500
        focus:ring-0
      "></textarea>

    <button
      disabled
      type="submit" 
      class="
        w-min place-self-end
        mt-2
        py-2 px-3 
        text-xs text-blue-50 hover:text-white font-bold tracking-wider uppercase
        enabled:cursor-pointer disabled:cursor-not-allowed
        rounded-md enabled:bg-blue-600 enabled:hover:bg-blue-800 disabled:bg-blue-300
      ">Submit</button>

  </form>

  <div id="success"
    class="
      hidden
      text-xl font-sans font-bold text-blue-500
    ">
    <span class="text-2xl rounded-full bg-blue-50 py-2 px-2.5 mr-2 leading-none">👍</span> Hey thanks!
  </div>
  <div class="absolute w-full h-full top-0 left-0 bg-blue-500 rounded-2xl -z-10 translate-y-6 scale-x-[.85]"></div>
  <div class="absolute w-full h-full top-0 left-0 bg-blue-400 rounded-2xl -z-10 translate-y-4 scale-x-90"></div>
  <div class="absolute w-full h-full top-0 left-0 bg-blue-300 rounded-2xl -z-10 translate-y-2 scale-x-95"></div>
</div>