{% set previousPost = collections.posts | getPreviousCollectionItem %}
{% set nextPost = collections.posts | getNextCollectionItem %}
{% set arrow %}
  <svg viewBox="0 0 26 26">
    <path d="M1 13C1 19.601563 6.398438 25 13 25C19.601563 25 25 19.601563 25 13C25 6.398438 19.601563 1 13 1C6.398438 1 1 6.398438 1 13 Z M 14.199219 7.398438C17.101563 9.398438 19.800781 12.398438 19.898438 12.601563C20 12.699219 20.101563 12.898438 20.101563 13.101563C20.101563 13.300781 20 13.398438 19.898438 13.601563C19.800781 13.699219 17.101563 16.800781 14.199219 18.800781C14 19 13.699219 19 13.398438 18.800781C13.199219 18.5 13 18.300781 13 18L13 15.398438C13 15.398438 6.898438 15.101563 6.601563 14.898438C6.300781 14.601563 6 13.800781 6 13C6 12.300781 6.300781 11.5 6.601563 11.199219C6.898438 11 13 10.601563 13 10.601563L13 8C13 7.699219 13.101563 7.5 13.398438 7.398438C13.601563 7.199219 13.898438 7.199219 14.199219 7.398438Z" />
  </svg>
{% endset%}

{% set buttonCss = "
  z-50 fixed 
  rounded-full w-12 sm:w-16 aspect-square p-0.5
  fill-orange-200 bg-stone-600 hover:fill-amber-200 hover:bg-yellow-900 
  ring-4 ring-transparent hover:ring-white
  hover:shadow-lg hover:shadow-yellow-900 
  hover:scale-105 
  opacity-50 sm:opacity-25 hover:opacity-50" 
%}

{% set prevCssNS = "-rotate-90 left-1/2 -ml-8 top-4" %}
{% set nextCssNS = "rotate-90 right-1/2 -mr-8 bottom-4" %}

{% set prevCssEW = "bottom-4 sm:top-1/2 -mt-8 ml-4 -scale-x-100 hover:-scale-x-105" %}
{% set nextCssEW = "bottom-4 sm:top-1/2 -mt-8 right-4" %}

{% if previousPost %}
  <a href="{{ previousPost.url }}" title="previous post"
    class="{{ buttonCss }} {{ prevCssEW}}"
    >{{ arrow | safe }}
  </a>
{% endif %}

{% if nextPost %}
  <a href="{{ nextPost.url }}" title="next post"
    class="{{ buttonCss }} {{ nextCssEW}}"
    >{{ arrow | safe }}
  </a>
{% endif %}