---
color: 'rgb(51 65 85)'
layout: 'layouts/default.njk'
---
<body class="overflow-hidden bg-slate-700">

  <div 
    style="height: 100dvh;"
    class="h-screen w-full overflow-y-scroll snap-mandatory snap-y"
  >

    {% for image in gallery %}

      <div 
        style="height: 90dvh;"
        class="h-[90vh] w-full snap-center grid justify-center items-center {{ 'bg-slate-400' if loop.index is divisibleby(2) else 'bg-slate-500' }}"
      >

        {% picture image.src, image.name, "m-auto w-5/6 h-5/6 max-h-screen max-w-full bg-slate-600 border-8 border-slate-50 ring-8 ring-offset-8 ring-slate-700" %}

      </div>

    {% endfor %}

  </div>

</body>