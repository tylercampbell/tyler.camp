---
bgcolor: '#1c1917' 
---
<!doctype html>
<html lang="en" class="snap-y snap-mandatory">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, viewport-fit=cover" />
    {% favicons './src/_includes/icons8-face_vomiting.svg' %}
    {% metagen
      title="Tyler Campbell",
      name="Tyler Campbell",
      desc="Tyler Campbell is a Creative Director in the beautiful state of Georgia.",
      url="https://www.tyler.camp",
      img="https://www.tyler.camp/ty-memoji-v1.jpg",
      img_alt="Tyler Campbell",
      twitter_handle="tylerscramble",
      generator="eleventy"
    %}
    <meta name="theme-color" content="{{bgcolor}}">
    <style>
      {% set css %}
        {% include "styles.css" %}
      {% endset %}
      {{css | postcss | safe}}
    </style>
    <script defer id="sm" src="./ScrollMagic.min.js"></script>
    {# <script src="./debug.addIndicators.min.js"></script> #}
  </head>

  <body style="background-color: {{bgcolor}}">
    {% svgsprite %}

    <header
      style="height: 100lvh;"
      class="
        fixed w-full h-screen 
        transition duration-300 
        -z-10"
    >
      {% picture "ty-memoji-v1.jpg", "Tyler Campbell Memoji", 
        "fixed w-full h-full object-cover blur scale-110 transition duration-500",
        "height: 100lvh;"
      %}
      {% svg "tylercampbell", 
        "absolute left-0 top-0 w-full h-[75vh] fill-rose-700/25 transition duration-300" 
      %}
      {% svg "tylercampbell", 
        "absolute left-0 top-0 w-full h-[75vh] fill-transparent stroke-2 stroke-white scale-[0.97] transition duration-300" 
      %}
    </header>

    <div style="height: 85svh;" class="h-[85vh] w-full snap-center"></div>

    <main id="gallery" class="mb-[33vh]">
      {% for image in gallery %}

        <article 
          id="{{ loop.index }}"
          class="
            snap-center
            py-8
            flex justify-center items-center"
        >
          {% picture "gallery/"+image.src, image.name, 
            "w-auto h-auto max-h-[80vh] max-w-[80vw]
            border-8 border-orange-100 ring-8 ring-stone-900",
            "max-height: 80svh;"
          %}
        </article>

      {% endfor %}
    </main>

    <script>
      sm.addEventListener('load', function () {
        // init controller
        var controller = new ScrollMagic.Controller({globalSceneOptions: {duration: 0}});
        // build scenes
        new ScrollMagic.Scene({triggerElement: "#gallery"})
          // .addIndicators() // add indicators (requires plugin)
          .setClassToggle("header", "scrolled")
        .addTo(controller);
      });
    </script>

  </body>
</html>