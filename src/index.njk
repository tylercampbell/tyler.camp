---
color: 'rgb(51 65 85)'
---
<!doctype html>
<html lang="en" class="snap-y snap-mandatory bg-slate-700">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, viewport-fit=cover" />
    {% favicons './src/_includes/icons8-face_vomiting.svg' %}
    {% metagen
      title="Tyler Campbell",
      name="Tyler Campbell",
      desc="Tyler Campbell is a Creative Director in the beautiful state of Georgia.",
      url="https://www.tyler.camp",
      img="https://www.tyler.camp/ty-memoji-v1.jpg",
      img_alt="Tyler Campbell",
      twitter_handle="tylerscramble",
      generator="eleventy"
    %}
    <meta name="theme-color" content="{{color}}">

    <style>
      {% set css %}
        {% include "styles.css" %}
      {% endset %}
      {{css | postcss | safe}}
    </style>

  </head>

    <body>
      {% svgsprite %}

      <div 
        style="height: 100lvh;"
        class="
          w-full h-screen 
          overflow-x-hidden overflow-y-visible
          fixed -z-10"
      >
        {% picture "ty-memoji-v1.jpg", "Tyler Campbell Memoji", 
          "w-full h-full object-cover object-center blur-sm scale-110"
        %}
        {% svg "tylercampbell", "absolute left-0 top-0 w-full h-[75vh] fill-rose-700/25" %}
        {% svg "tylercampbell", "absolute left-0 top-0 w-full h-[75vh] fill-transparent stroke-2 stroke-white scale-[0.97]" %}
      </div>

    <div 
      style="height: 85svh;"
      class="
        snap-center
        h-[85vh] w-full"
    >
    </div>
      
    {% for image in gallery %}
      <article 
        id="{{ loop.index }}"
        class="
          snap-center
          py-8
          flex justify-center items-center"
      >
        {% picture "gallery/"+image.src, image.name, 
          "w-auto h-auto max-h-[80vh] max-w-[80vw]
          border-[16px] border-orange-100 ring-8 ring-slate-900",
          "max-height: 80svh;"
        %}
      </article>
    {% endfor %}

  </body>
</html>