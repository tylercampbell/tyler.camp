<!doctype html>
<html lang="en" class="bg-violet-500">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, viewport-fit=cover" />
    {% favicons './src/_includes/icons8-face_vomiting.svg' %}
    {% metagen
      title="Tyler Campbell",
      name="Tyler Campbell",
      desc="Tyler Campbell is a Creative Director located in the great state of Georgia.",
      url="https://www.tyler.camp",
      img="https://www.tyler.camp/tyler.camp.png",
      img_alt="Tyler Campbell",
      twitter_handle="TylerScramble",
      generator="eleventy"
    %}
    <meta name="theme-color" content="#8b5cf6">

    {% set css %}
      {% include "styles.css" %}
    {% endset %}
    <style>
      {{css | postcss | safe}}
    </style>

  </head>

  <body class="bg-gradient-to-b from-violet-500 via-fuchsia-900 to-violet-500">
    {% svgsprite %}

    <main class="grid h-screen place-items-center">
      {% svg "tylercampbell", "h-screen w-screen" %}
      <a class="absolute top-3/4 right-4" href="https://twitter.com/TylerScramble/" title="Twitter">
        {% svg "twitter-brands", "h-8 aspect-square fill-blue-400/50" %}
      </a>
    </main>
  
  </body>
</html>
