<div id="contact" class="my-4 mx-auto p-4 max-w-sm bg-blue-200 font-mono">

    <form name="contact" method="POST" action="/#contact" data-netlify="true" class="my-form flex flex-col gap-y-2">
      {# <label>Your Name: <input type="text" name="name"/></label> #}
      {# <label>Your Email: <input type="email" name="email"/></label> #}
      <label for="comments" class="font-extrabold text-blue-500 text-2xl">Lemme know</label>
      <textarea name="message" placeholder="Your comments" class="w-full h-40 text-base"></textarea>
      <button type="submit" class="w-min place-self-end mt-2 cursor-pointer py-2 px-3 bg-blue-600 text-white uppercase text-sm tracking-widest">Send</button>
    </form>

    <div id="success" class="hidden text-emerald-600 font-bold">Success!</div>

</div>


<script>
  let testForm = document.querySelector("#contact form");
  let success = document.querySelector("#success");
  
  testForm.addEventListener('submit', e => {
    e.preventDefault();

    const formData = new FormData(testForm);
    fetch(testForm.getAttribute('action'), {
      method: 'POST',
      headers: {
        'Accept': 'application/x-www-form-urlencoded;charset=UTF-8',
        'Content-Type': 'application/x-www-form-urlencoded;charset=UTF-8'
      },
      body: new URLSearchParams(formData).toString()
    })
    .then(res => {
      if (res) {
        testForm.classList.replace('flex', 'hidden')
        success.classList.replace('hidden', 'block')
      }
    });
  });

</script>