{% if toc %}
    <ol class="toc">
        {% for first in toc %}
            <li>
                <a class="toc__link" href="#{{ first.title | slugify }}">
                    {{ first.title | safe }}
                </a>
                {% if first.items %}
                    <ol class="toc__list">
                        {% for second in first.items %}
                            <li>
                                <a class="toc__link" href="#{{ second | slugify }}">
                                    {{ second }}
                                </a>
                            </li>
                        {% endfor %}
                    </ol>
                {% endif %}
            </li>
        {% endfor %}
    </ol>
{% endif %}
