<header class="bg-gray-900">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div
      class="flex w-full items-center justify-between border-b border-gray-200 py-6 lg:border-none"
    >
      <div class="flex items-center">
        <a href="/">
          <span class="sr-only">TEA Stack</span>
          <svg
            class="h-10 w-auto text-white"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 640 512"
          >
            <path
              fill="currentColor"
              d="M96 64c0-17.7 14.3-32 32-32H448h64c70.7 0 128 57.3 128 128s-57.3 128-128 128H480c0 53-43 96-96 96H192c-53 0-96-43-96-96V64zM480 224h32c35.3 0 64-28.7 64-64s-28.7-64-64-64H480V224zM32 416H544c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32z"
            />
          </svg>
        </a>
        <div class="ml-10 hidden space-x-8 lg:block">
          {% for item in navigation %}
            <a
              href="{{ item.route }}"
              class="{{
                page.url == item.route ? 'font-black' : 'font-medium'
              }} text-base text-white hover:text-indigo-50"
            >
              {{ item.name }}
            </a>
          {% endfor %}
        </div>
      </div>
      <div class="ml-10 space-x-4">
        <a
          href="https://github.com/mattwaler/tea-stack"
          class="inline-block rounded-md border border-transparent bg-white py-2 px-4 text-base font-medium hover:bg-indigo-50"
        >
          View on GitHub
        </a>
      </div>
    </div>
    <div class="flex flex-wrap justify-center space-x-6 py-4 lg:hidden">
      {% for item in navigation %}
        <a
          href="{{ item.route }}"
          class="{{
            page.url == item.route ? 'font-black' : 'font-medium'
          }} text-base text-white hover:text-indigo-50"
        >
          {{ item.name }}
        </a>
      {% endfor %}
    </div>
  </nav>
</header>
