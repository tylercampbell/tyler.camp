{
  "scripts": {
    "clean": "rimraf _site",

    "serve:postcss": "postcss ./src/_includes/assets-global/styles.css -o ./_site/compiled.css --verbose --watch",
    "build:postcss": "postcss ./src/_includes/assets-global/styles.css -o ./_site/compiled.css --verbose",

    "serve:scripts": "esbuild ./src/_includes/assets-global/scripts.js --outfile=./_site/compiled.js --bundle --watch",
    "build:scripts": "esbuild ./src/_includes/assets-global/scripts.js --outfile=./_site/compiled.js --bundle --minify",

    "serve:eleventy": "eleventy --serve --incremental",
    "build:eleventy": "eleventy",

    "dev":   "cross-env NODE_ENV=development npm-run-all clean -p serve:*",
    "build": "cross-env NODE_ENV=production  npm-run-all -s build:*"
  },
  "dependencies": {
    "@11ty/eleventy": "2.0.0",
    "@11ty/eleventy-img": "3.0.0",
    "@quasibit/eleventy-plugin-sitemap": "2.2.0",
    "@tailwindcss/forms": "0.5.3",
    "alpinejs": "3.11.1",
    "eleventy-plugin-metagen": "1.7.11",
    "tailwindcss": "3.2.7"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "esbuild": "0.17.10",
    "html-minifier": "4.0.0",
    "netlify-plugin-cache": "1.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.21",
    "postcss-cli": "10.1.0",
    "postcss-lightningcss": "0.6.0",
    "rimraf": "4.1.2"
  }
}
