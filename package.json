{
  "scripts": {
    "clean": "rimraf docs",

    "dev:eleventy": "npx eleventy --serve",
    "build:eleventy": "ELEVENTY_PRODUCTION=true eleventy",
    
    "dev:postcss": "postcss src/styles.css -o docs/styles.css --config ./postcss.config.js -w",
    "build:postcss": "postcss src/styles.css -o docs/styles.css --config ./postcss.config.js",
    
    "dev": "run-p dev:*",
    "build": "NODE_ENV=production run-s clean build:*"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    
    "@11ty/eleventy": "^1.0.1",
    "eleventy-plugin-svg-sprite": "^1.2.2",
    "@quasibit/eleventy-plugin-sitemap": "^2.1.5",
    "eleventy-plugin-gen-favicons": "^1.1.0",
    "eleventy-plugin-metagen": "^1.6.0",

    "tailwindcss": "^3.0.22",
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2"
  }
}
